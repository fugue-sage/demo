@language("no-prelude")

fun and(x: Bool, y: Bool) -> Bool:
  case x of
    | True  -> y
    | _     -> False

fun or(x: Bool, y: Bool) -> Bool:
  case x of
    | True  -> True
    | _     -> y


fun not(x: Bool) -> Bool: if x then False else True

operator && infixr 3: and
operator || infixr 2: or
operator ! prefix: not
